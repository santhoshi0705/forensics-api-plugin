<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.jenkins.plugin</groupId>
    <artifactId>plugin</artifactId>
    <version>4.74</version>
    <relativePath>false</relativePath>
  </parent>

  <groupId>io.jenkins.plugins</groupId>
  <artifactId>forensics-api-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <name>Forensics API Plugin</name>
  <url>https://github.com/santhoshi0705/forensics-api-plugin</url>

  <properties>
    <java.level>11</java.level>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <pluginRepositories>
    <pluginRepository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
    <dependency>
      <groupId>org.jenkins-ci.main</groupId>
      <artifactId>jenkins-core</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- Add your other plugin dependencies here -->
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.level}</source>
          <target>${java.level}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <scm>
    <url>https://github.com/santhoshi0705/forensics-api-plugin.git</url>
    <connection>scm:git:https://github.com/santhoshi0705/forensics-api-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:santhoshi0705/forensics-api-plugin.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <developers>
    <developer>
      <id>santhoshi</id>
      <name>Santhosh I</name>
      <email>santhosh@example.com</email>
    </developer>
  </developers>
</project>
