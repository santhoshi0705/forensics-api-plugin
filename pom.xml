<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.jenkins.plugins</groupId>
  <artifactId>forensics-api-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <name>Forensics API Plugin</name>
  <url>http://your.plugin.url/</url>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>4.79</version> <!-- latest 4.x series -->
    <relativePath/>
  </parent>

  <properties>
    <!-- Minimum supported Jenkins and Java for parent POM ≥ 4.52 -->
    <jenkins.version>2.361.4</jenkins.version>
    <no-test-jar>false</no-test-jar>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.jenkins.tools.bom</groupId>
        <artifactId>bom-2.361.x</artifactId>
        <version>1750.v0071fa_4c4a_e3</version> <!-- latest plugin BOM -->
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <!-- Example usage: remove <version> if managed by BOM -->
    <dependency>
      <version>org.jenkins-ci.plugins:workflow-cps:jar</version>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>workflow-cps</artifactId>
      <scope>test</scope>
    </dependency>
    <!-- Add other dependencies here (without version tags when using BOM) -->
  </dependencies>

  <repositories>
    <repository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </repository>
  </repositories>
</project>
